//pi r^2    2 pi r
//area      primeter of circle
public class Main
{
	public static void main(String[] args) {
	    java.util.Scanner kb=new java.util.Scanner(System.in);
		double area, primeter,radius,pi,alfa, alfa_area;
		pi=3.14;
		System.out.println("Please enter the radius[m]");
		radius=kb.nextDouble();
		System.out.println("Please enter the alfa degree(Î±)");
		alfa=kb.nextDouble();
	    area=pi*radius*radius;
	    primeter=2*pi*radius;
	    alfa_area=area*alfa/360;

		System.out.println("Area= "+ area +" Primeter="+primeter+ " Alfa Area="+ alfa_area);
		}
	
}
